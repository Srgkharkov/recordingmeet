{
  "manifest_version": 3,
  "name": "Tab Video and Audio Recorder",
  "version": "1.0",
  "permissions": [
    "tabCapture",
    "activeTab",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}

